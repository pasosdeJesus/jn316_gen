<% if can?(:edit, Sip::Grupo) %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    edit_modelo_path(registro), :class => 'btn btn-xs'
  %>
<% end %>
<% if can?(:destroy, Sip::Grupo) %>
  <%= link_to 'Eliminar de base',
    sip.admin_grupo_path(registro),
    :method => :delete,
    :data => { 
      :confirm => t('.confirm', 
                    :default => t("helpers.links.confirm", 
                                  :default => '¿EStá seguro?')) 
    },
    :class => 'btn btn-xs btn-danger' %>
  <% if registro.gidNumber %>
    <%= link_to 'Eliminar de base y LDAP',
      jn316_gen.grupoldap_path(registro),
      :method => :delete,
      :data => { 
        :confirm => t('.confirm', 
                      :default => t("helpers.links.confirm", 
                                    :default => 'Are you sure?')) 
      },
      :class => 'btn btn-xs btn-danger' %>
  <% end %>

<% end %>
