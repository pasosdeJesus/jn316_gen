<%- model_class = ::Usuario -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nusuario) %></th>
      <th><%= model_class.human_attribute_name(:nombres) %></th>
      <th><%= model_class.human_attribute_name(:apellidos) %></th>
      <th><%= model_class.human_attribute_name(:descripcion) %></th>
      <th><%= model_class.human_attribute_name(:rol) %></th>
      <th><%= model_class.human_attribute_name(:grupo) %></th>
      <th><%= model_class.human_attribute_name(:idioma) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:created_at_localizada) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @usuarios.try(:each) do |usuario| %>
      <tr>
        <td><%= link_to usuario.id, usuario_path(usuario) %></td>
        <td><%= usuario.nusuario %></td>
        <td><%= usuario.nombres %></td>
        <td><%= usuario.apellidos %></td>
        <td><%= usuario.descripcion %></td>
        <% rol = Ability::ROLES.select { |r| r[1] == usuario.rol } %>
        <td><%= rol[0][0] if rol && rol[0] && rol[0][0] %></td>
        <td><%= usuario.sip_grupo.inject('') { |m,i| 
            (m == '' ? '': m + '. ') + i.nombre } %></td>
        <td><%= usuario.idioma %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.created_at_localizada.to_s %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_usuario_path(usuario), :class => 'btn btn-xs' %>
          <%= link_to 'Eliminar de base',
                      usuario_path(usuario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <%= link_to 'Eliminar de base y LDAP',
                      jn316_gen.usuarioldap_path(usuario),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>


        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @usuario, { param_name: :pagina }  %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_usuario_path,
            :class => 'btn btn-primary' %>
