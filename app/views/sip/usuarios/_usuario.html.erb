  <div id="errores">
    <% if f.object.errors.any? %>
      <div id="error_explanation">
        <div class="alert alert-error">
          El formulario tiene <%= pluralize(f.object.errors.count, "error") %>.
        </div>
        <ul>
          <% f.object.errors.full_messages.each do |msg| %>
            <li>* <%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <%= f.input :id, label: "Código", readonly: true%>
  <%= f.input :nusuario,
    input_html: {
    "data-toggle" => 'tooltip', 
    "title" => 'Identificación personal ante el sistema (recomendada primera letra del nombre y apellido)'}
  %>
  <%= f.input :nombres %>
  <%= f.input :apellidos %>
  <%= f.input :descripcion %>
  <%= f.input :rol,
    collection: Ability::ROLES.select { |v| v.last != 0 },
    label: "Rol",
    include_blank: false
  %>
  <%= f.input :idioma %>
  <%= f.input :email %>
	<%= f.input :encrypted_password %>
  <%= f.input :uidNumber %>

  <%= f.input :fechacreacion_localizada,
    input_html: { "data-behaviour" => "datepicker" }, 
    as: :string
  %>
	<%= f.input :fechadeshabilitacion_localizada,
    input_html: { "data-behaviour" => "datepicker" }, 
    as: :string
  %>
	<%= f.input :failed_attempts,
		label: 'Intentos fallidos'
	%>
	<%= f.input :unlock_token,
		wrapper_html: { style: "padding-bottom:18px;" },
		label: 'Testigo para desbloquear'
	%>
	<%= f.input :locked_at,
		label: 'Hora del Bloqueo',
		input_html: { "data-behaviour" => "datepicker" }, 
	  :as => :string
	%>
