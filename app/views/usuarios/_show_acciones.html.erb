<%= link_to t('.back', :default => t("helpers.links.back")),
  main_app.usuarios_path, :class => 'btn'  %>
<% if can?(:edit, ::Usuario) %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
    main_app.edit_usuario_path(@registro), :class => 'btn' %>
<% end %>
<% if can?(:destroy, ::Usuario) %>
  <%= link_to 'Eliminar de base',
    main_app.usuario_path(@registro),
    :method => 'delete',
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    :class => 'btn btn-danger' %>
  <% if @registro && @registro.uidNumber %>
    <%= link_to 'Eliminar de base y LDAP',
      jn316_gen.usuarioldap_path(@registro),
      :method => :delete,
      :data => { 
        :confirm => t('.confirm', 
                      :default => t("helpers.links.confirm", 
                                    :default => 'Are you sure?')) 
      },
      :class => 'btn btn-danger' %>
  <% end %>
<% end %>
